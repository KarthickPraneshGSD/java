public class Main
{
	public static void main(String[] args) {
	    String str1="                                                   helloworld                                              ";
	    String str2="HELLOWORLD"; 
	    System.out.println(str1.trim());
	}
}

//upper lower case

public class Main
{
	public static void main(String[] args) {
	    String str1="helloworld";
	    String str2="HELLOWORLD";
		System.out.println("Converted into upper case :"+str1.toUpperCase());
		System.out.println("Converted into lower case :"+str1.toLowerCase());
	}
}
